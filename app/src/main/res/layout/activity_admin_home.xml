<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminHome"
    android:paddingTop="130dp"
    android:orientation="vertical">

    <Button
        android:layout_margin="20dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/admin_add_patient"
        android:textColor="#ffffff"
        android:background="@color/colorPrimaryDark"
        android:text="Add Patient "/>
    <Button
        android:layout_margin="20dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/admin_add_doctor"
        android:textColor="#ffffff"
        android:background="@color/colorPrimaryDark"
        android:text="Add doctor"/>
    <Button
        android:layout_margin="20dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/admin_doc_details"
        android:textColor="#ffffff"
        android:background="@color/colorPrimaryDark"
        android:text="View doctor details"/>
    <Button
        android:layout_margin="20dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/admin_pat_details"
        android:textColor="#ffffff"
        android:background="@color/colorPrimaryDark"
        android:text="view patient details"/>

    <Button
        android:layout_margin="20dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/admin_logout"
        android:textColor="#ffffff"
        android:background="@color/colorPrimaryDark"
        android:text="logout"/>
</LinearLayout>