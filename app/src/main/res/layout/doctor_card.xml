<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:padding="10dp"
            android:layout_toLeftOf="@+id/age"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/doctor_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:padding="10dp"
            android:layout_below="@+id/doctor_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:id="@+id/doctor_qualification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qualification"
            android:maxLines="1"
            android:layout_below="@+id/doctor_email"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:padding="10dp"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/doctor_specail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialist"
            android:maxLines="1"
            android:layout_below="@+id/doctor_email"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:padding="10dp"
            android:layout_toRightOf="@+id/doctor_qualification"
            android:ellipsize="end"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:id="@+id/doctor_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phone"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:padding="10dp"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/doctor_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctor_qualification"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:padding="10dp"
            android:layout_alignParentStart="true"
            android:text="Address"/>
    
    </RelativeLayout>

</androidx.cardview.widget.CardView>